<div class="yxt-Results-titleBar">
  <div class="yxt-Results-left">
    <div class="yxt-Results-titleIconWrapper">
      <img class="yxt-Results-titleIcon" src="{{sectionTitleIcon}}" alt="">
    </div>
    <h2 class="yxt-Results-title">
      {{sectionTitle}}
    </h2>
  </div>
  {{#if verticalURL}}
    <a class="yxt-Results-viewAllLink" href="{{verticalURL}}">
      {{viewAllText}}
    </a>
  {{/if}}
  {{#if appliedQueryFilters}}
    <ul class="yxt-Results-filters">
      {{#each appliedQueryFilters}}
        <li class="yxt-Results-filter">
          <span class="yxt-Results-filterValue">{{value}}</span>
        </li>
      {{/each}}
      {{#if showChangeFilters}}
        {{#if verticalURL}}
          <a class="yxt-Results-changeFilters" href="{{verticalURL}}">
            change filters
          </a>
        {{/if}}
      {{/if}}
    </ul>
  {{/if}}
</div>
